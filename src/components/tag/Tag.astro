---
import { kebabCase } from 'lodash-es';

import type { Tag } from '~/types';

type Props = Omit<Tag, 'count'> & {
  count?: number;
};

const { value, count, color = 'violet' } = Astro.props;
---

<a
  href={`/tag/${kebabCase(value)}`}
  class={`select-none inline-flex items-center text-sm leading-4 rounded-full px-4 py-1.5 text-${color}-500 bg-${color}-100 hover:text-${color}-700 hover:bg-${color}-200`}
>
  <span>{value}</span>
  {count && <span class="ml-1">({count})</span>}
</a>
